{
  "name": "zerotier.js",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && mocha --exit --no-timeouts --reporter mochawesome --reporter-options reportDir=test-results --recursive dist/**/*.test.js",
    "cover": "c8 --reporter=lcov --reporter=text npm t"
  },
  "exports": {
    ".": "./dist/index.js",
    "./dist/*.js": "./dist/*.js"
  },
  "files": [
    "dist/api.d.*",
    "dist/api.js",
    "dist/client.d.*",
    "dist/client.js",
    "dist/controller.d.*",
    "dist/controller.js",
    "dist/index.d.*",
    "dist/index.js",
    "dist/types.d.*",
    "dist/types.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/needle": "^3.2.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "needle": "^3.2.0"
  },
  "c8": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "dist/**/*.js",
      "src/**/*.ts"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "exclude": [
      "dist/**/*.test.js",
      "src/**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true
  }
}
