{
  "name": "zerotier.js",
  "type": "module",
  "version": "1.4.0",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "clean": "rm -rf dist coverage test-results tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rm -rf node_modules",
    "test": "npm run build && mocha --exit --no-timeouts --reporter mochawesome --reporter-options reportDir=test-results --recursive dist/**/*.test.js",
    "cover": "c8 --reporter=lcov --reporter=text npm t"
  },
  "exports": {
    ".": "./dist/node/index.js",
    "./node": "./dist/node/index.js",
    "./browser": "./dist/browser/index.js",
    "./dist/*.js": "./dist/**/*.js",
    "./dist/*.ts": "./dist/**/*.ts"
  },
  "types": "./dist/node/index.d.ts",
  "files": [
    "dist/base",
    "dist/node",
    "dist/browser",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/needle": "^3.2.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "node-fetch": "^3.3.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "needle": "^3.2.0",
    "zerotier-rule-compiler": "^1.2.2-2"
  },
  "c8": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "dist/**/*.js",
      "src/**/*.ts"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "exclude": [
      "dist/**/*.test.js",
      "src/**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true
  }
}
